---
import { SITE_CONFIG } from "../config";

const whatsappLink = `https://wa.me/${SITE_CONFIG.whatsapp}?text=${encodeURIComponent(SITE_CONFIG.whatsappMessage)}`;
---

<a
    href={whatsappLink}
    target="_blank"
    rel="noopener noreferrer"
    class="md:hidden fixed bottom-4 right-4 z-50 flex items-center justify-center p-3.5 bg-gray-900/90 border border-green-500/30 rounded-full text-green-500 shadow-lg shadow-green-900/30 backdrop-blur-md transition-all duration-300 hover:scale-110 active:scale-95 group"
    aria-label="Contactar por WhatsApp"
>
    <!-- Glow effect -->
    <div
        class="absolute inset-0 rounded-full bg-green-500/20 blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-300"
    >
    </div>

    <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="relative z-10 w-6 h-6"
    >
        <path d="M3 21l1.65-3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"></path>
        <path
            d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"
        ></path>
    </svg>
</a>
